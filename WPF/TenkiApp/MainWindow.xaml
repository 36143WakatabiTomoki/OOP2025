<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TenkiApp" Height="500" Width="850" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="LightSkyBlue" Offset="0"/>
            <GradientStop Color="PowderBlue" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2.5*"/>
        </Grid.RowDefinitions>

        <!-- 上段：現在の天気 -->
        <Border CornerRadius="20" Background="Azure" Padding="20" Margin="0 0 0 10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- 左：検索と時刻 -->
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBox x:Name="SearchBox" Width="200" Height="30"
                                 Padding="5" FontSize="14" Background="#338FDEFF"/>
                        <Button Content="検索" Width="70" Margin="10 0 0 0" Background="AliceBlue" Click="Button_ClickAsync" BorderBrush="#7FFFFFFF"/>
                    </StackPanel>

                    <TextBlock x:Name="CurrentTime" FontSize="18" FontWeight="Bold"
                               Text="--:--" Foreground="#333"/>
                </StackPanel>

                <!-- 右：現在の天気情報 -->
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="CurrentWeatherIcon" Text="☀" FontSize="50" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CurrentTemperature" Text="-- ℃" FontSize="40"
                               FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CurrentWeather" Text="天気情報" FontSize="20" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 下段：週間天気 -->
        <ItemsControl Grid.Row="1" Margin="0 10 0 0" x:Name="WeekItems" Background="#80FFFFFF">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="90" Height="150" CornerRadius="15"
                            Background="#AAFFFFFF" Margin="10">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Day}" FontSize="16" FontWeight="Bold" Margin="0 5" TextAlignment="Center"/>
                            <TextBlock Text="{Binding Icon}" FontSize="36" Margin="0 5" TextAlignment="Center"/>
                            <TextBlock Text="{Binding Temp}" FontSize="16" Margin="5" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</Window>
