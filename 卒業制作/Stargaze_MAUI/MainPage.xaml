<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stargaze_MAUI.MainPage">

    <StackLayout Padding="10">
        <Button Text="星座データ読み込み" Clicked="OnLoadDataClicked" />

        <CollectionView ItemsSource="{Binding Constellations}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="5">
                        <Label Text="{Binding JpName}" FontSize="20"/>
                        <Label Text="{Binding Direction}" />
                        <Label Text="{Binding AltitudeNum}" />
                        <Image Source="{Binding StarIcon}" HeightRequest="50" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>
